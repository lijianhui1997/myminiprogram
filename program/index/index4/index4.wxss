/* index/index4/index4.wxss */
 .info{
    width: 100%;
    height: 100%;
}
.top_img{
    width: 100%;
    height: 180px;
    overflow: hidden;
    position: relative;
}
.txt{
    position: absolute;
    top: 80px;
    background-color: rgba(4, 25, 94, 0.212);
    left: 20%;
    width: 60%;
    height: 45px;
    line-height: 45px;
    text-align: center;
    border-radius: 4px;
}
.text{
    font-size: 30px;
    font-family: '幼圆';
    color: rgba(255, 255, 255, 0.5);
}
.list{
    width: 96%;
    margin: 0px 2% 0px 2%;
    height: 120px;
    border-bottom: 0.5px solid rgb(160, 160, 160);
    padding-bottom: 5px;
}
.list:last-child{
    margin-bottom: 45px;
}
.left{
    width: 45%;
    height: 120px;
    float: left;
}
.img{
    width: 80%;
    height: 80%;
    margin: 10%;
}
.right{
    width: 55%;
    height: 120px;
    float: left;
}
.right_top{
    margin-top: 20px;
    font-size: 16px;
    font-family: '新宋体';
    font-weight: bold;
    color: rgb(46, 46, 46);
    letter-spacing: 2px;
}
.right_bottom{
    margin-top: 10px;
    font-size: 13px;
    font-family: '幼圆';
    color: rgb(39, 39, 39);
    letter-spacing: 2px;
    line-height: 1.5em;
    margin-right: 3%;
} 
